              }
            },
            {
              "name": "transactionType",
              "schema": {
                "type": "string"
              }
            }
          ],
          "returns": {
            "$ref": "#/components/schemas/packageTransaction"
          },
          "rules": [{
            "description": "retrieve a transaction of specified package uid and transaction type",
            "actions": [{
                "activity": "#get",
                "name": "get_1",
